{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@customTypes/*": ["customTypes/*"],
      "@services/*": ["services/*"],
      "@rules/*": ["rules/*"],
      "@data/*": ["data/*"]
    }
  }
}
